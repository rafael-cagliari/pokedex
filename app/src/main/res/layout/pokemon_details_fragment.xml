<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/details_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/munro"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#0C0C0C"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        tools:text="Pikachu" />

                    <TextView
                        android:id="@+id/details_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/munrosmall"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#0C0C0C"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        tools:text="30" />

                    <ImageView
                        android:id="@+id/pokemon_detail_image"
                        android:layout_width="150dp"
                        android:layout_height="152dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:scaleType="fitEnd"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        style="@style/PokeDetailsTitle"

                        android:text="Weight" />

                    <TextView
                        android:id="@+id/details_weight"
                        style="@style/PokeDetailsFilling"
                        android:text=""
                        android:textColor="#0C0C0C"
                        tools:text="Weight" />

                    <TextView
                        style="@style/PokeDetailsTitle"
                        android:text="Height" />

                    <TextView
                        android:id="@+id/details_height"
                        style="@style/PokeDetailsFilling"
                        android:text=""
                        android:textColor="#0C0C0C"
                        tools:text="Height" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/description"
                style="@style/PokeDetailsFilling"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/munrosmall"
                android:lineSpacingExtra="3.5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="sasasas"
                android:textColor="#0C0C0C"
                android:textSize="16sp" />

            <TextView
                style="@style/PokeDetailsTitle"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="Type" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/type_detail1"
                    android:layout_width="45dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/flying" />

                <ImageView
                    android:id="@+id/type_detail2"
                    android:layout_width="45dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                style="@style/PokeDetailsTitle"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="Weaknesses" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/weakness_detail1"
                    android:layout_width="45dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/flying" />

                <ImageView
                    android:id="@+id/weakness_detail2"
                    android:layout_width="45dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/weakness_detail3"
                    android:layout_width="45dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/weakness_detail4"
                    android:layout_width="45dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/weakness_detail5"
                    android:layout_width="45dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/weakness_detail6"
                    android:layout_width="45dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/weakness_detail7"
                    android:layout_width="45dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY" />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="25dp"
                android:id="@+id/cardView"
                android:layout_height="wrap_content"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/evoBox"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/evo_figure1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/evo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/munro"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/evo_figure1"
                        app:layout_constraintStart_toStartOf="@+id/evo_figure1"
                        app:layout_constraintTop_toBottomOf="@+id/evo_figure1"
                        tools:ignore="MissingConstraints"
                        tools:text="EVOLUÇÃO 1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/evo_figure2"
                        app:layout_constraintStart_toEndOf="@+id/evo_figure1"
                        android:layout_marginStart="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:id="@+id/evo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/munro"
                        android:text=""
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/evo_figure2"
                        app:layout_constraintStart_toStartOf="@+id/evo_figure2"
                        app:layout_constraintTop_toBottomOf="@+id/evo_figure2"
                        tools:text="EVOLUÇÃO 2" />

                    <TextView
                        android:id="@+id/evo_cond1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/munronarrow"
                        android:textSize="15sp"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/evo2"
                        app:layout_constraintStart_toEndOf="@+id/evo1"
                        app:layout_constraintTop_toBottomOf="@+id/evo1"
                        tools:text="Level 16" />

                    <ImageView
                        android:id="@+id/evo_figure3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        app:layout_constraintStart_toEndOf="@+id/evo_figure2" />

                    <TextView
                        android:id="@+id/evo3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/munro"
                        android:text=""
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/evo_figure3"
                        app:layout_constraintStart_toStartOf="@+id/evo_figure3"
                        app:layout_constraintTop_toBottomOf="@+id/evo_figure3"
                        tools:text="EVOLUÇÃO 3" />

                    <TextView
                        android:id="@+id/evo_cond2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/munronarrow"
                        android:textSize="15sp"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/evo3"
                        app:layout_constraintStart_toEndOf="@+id/evo2"
                        app:layout_constraintTop_toBottomOf="@+id/evo2"
                        tools:text="Level 36" />



                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>