<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/details_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#0C0C0C"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    tools:text="Pikachuu" />

                <TextView
                    android:id="@+id/details_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#0C0C0C"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    tools:text="Pikachuu" />

                <ImageView
                    android:id="@+id/pokemon_detail_image"
                    android:layout_width="150dp"
                    android:layout_height="152dp"
                    android:layout_margin="20dp"
                    android:layout_marginTop="0dp"
                    android:scaleType="fitEnd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/PokeDetailsTitle"
                    android:layout_marginTop="45dp"
                    android:text="Weight"/>

                <TextView
                    android:id="@+id/details_weight"
                    style="@style/PokeDetailsFilling"
                    android:text=""
                    android:textColor="#0C0C0C"
                    tools:text="Weight"/>

                <TextView
                    style="@style/PokeDetailsTitle"
                    android:text="Height"/>

                <TextView
                    android:id="@+id/details_height"
                    style="@style/PokeDetailsFilling"
                    android:text=""
                    android:textColor="#0C0C0C"
                    tools:text="Height"/>



                <TextView
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="3.5dp"
                    android:id="@+id/description"
                    style="@style/PokeDetailsFilling"
                    android:text=""
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:textColor="#0C0C0C"
                    android:paddingLeft="0dp"
                    android:paddingRight="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            style="@style/PokeDetailsTitle"
            android:layout_marginTop="15dp"
            android:text="Type"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/type_detail1"
                android:layout_width="45dp"
                android:layout_height="14dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/flying"/>

            <ImageView
                android:id="@+id/type_detail2"
                android:layout_width="45dp"
                android:layout_height="14dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            style="@style/PokeDetailsTitle"
            android:layout_marginTop="15dp"
            android:text="Weaknesses"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/weakness_detail1"
                android:layout_width="45dp"
                android:layout_height="14dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/flying"/>

            <ImageView
                android:id="@+id/weakness_detail2"
                android:layout_width="45dp"
                android:layout_height="14dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/weakness_detail3"
                android:layout_width="45dp"
                android:layout_height="14dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/weakness_detail4"
                android:layout_width="45dp"
                android:layout_height="14dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/weakness_detail5"
                android:layout_width="45dp"
                android:layout_height="14dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/weakness_detail6"
                android:layout_width="45dp"
                android:layout_height="14dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/weakness_detail7"
                android:layout_width="45dp"
                android:layout_height="14dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"/>

        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/evo_figure1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitEnd"
                app:layout_constraintEnd_toEndOf="@+id/evo1"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/evo1"
                android:layout_marginRight="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/evo_figure1"
                tools:text="EVOLUÇÃO 1"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/evo_cond1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                app:layout_constraintEnd_toStartOf="@+id/evo2"
                app:layout_constraintStart_toEndOf="@+id/evo1"
                app:layout_constraintTop_toBottomOf="@+id/evo1"
                tools:ignore="MissingConstraints"
                tools:text="Level 16" />

            <TextView
                android:id="@+id/evo_cond2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                app:layout_constraintEnd_toStartOf="@+id/evo3"
                app:layout_constraintStart_toEndOf="@+id/evo2"
                app:layout_constraintTop_toBottomOf="@+id/evo1"
                tools:ignore="MissingConstraints"
                tools:text="Level 36" />

            <ImageView
                android:id="@+id/evo_figure2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitEnd"
                app:layout_constraintEnd_toEndOf="@+id/evo2"
                app:layout_constraintStart_toStartOf="@+id/evo2"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/evo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text=""
                app:layout_constraintStart_toEndOf="@+id/evo1"
                app:layout_constraintTop_toBottomOf="@+id/evo_figure2"
                tools:text="EVOLUÇÃO 2" />


            <ImageView
                android:id="@+id/evo_figure3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitEnd"
                app:layout_constraintEnd_toEndOf="@+id/evo3"
                app:layout_constraintStart_toStartOf="@+id/evo3"
                tools:ignore="MissingConstraints"/>

            <TextView
                android:id="@+id/evo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text=""
                app:layout_constraintStart_toEndOf="@+id/evo2"
                app:layout_constraintTop_toBottomOf="@+id/evo_figure3"
                tools:text="EVOLUÇÃO 3" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>